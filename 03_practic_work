// Задача 19: Напишите программу, которая принимает на вход пятизначное число и проверяет, является ли оно палиндромом.
// 14212 -> нет
// 23432 -> да
// 12821 -> да

Console.WriteLine("Проверяем, является ли число палиндромом"); // т.е. таким, что первый символ равен последнему, второй - предпоследнему и т.д. 
Console.Write("Введите пятизначное число: ");
string number = Console.ReadLine(); // считываем число с консоли символы (причем это могут быть и не только числа:) и создаем текстовую переменную number

void CheckNumber(string number) // метод проверки текстовой переменной number
{
  if (number[0]==number[4] & number[1]==number[3]) // условие равенства символа с индексами 0 и 4 И равенства символов с индексами 1 и 3
  {
    Console.WriteLine($"{number} - да"); // true пишем "да"
  }
  else 
    Console.WriteLine($"{number} - нет"); //false пишем "нет"
}

if (number.Length == 5) // программа начинается с проверки на пятизначность переменной number
{
    CheckNumber(number); // true запускаем метод CheckNumber
}
else //false пишем, чтобы введенный текст/число было из пяти символов
    Console.WriteLine($"Введено неверное число! Нужно пятизначное.");
    
