// Задача 19: Напишите программу, которая принимает на вход пятизначное число и проверяет, является ли оно палиндромом.
// 14212 -> нет
// 23432 -> да
// 12821 -> да

Console.WriteLine("Проверяем, является ли число палиндромом"); // т.е. таким, что первый символ равен последнему, второй - предпоследнему и т.д. 
Console.Write("Введите пятизначное число: ");
string number = Console.ReadLine(); // считываем число с консоли символы (причем это могут быть и не только числа:) и создаем текстовую переменную number

void CheckNumber(string number) // метод проверки текстовой переменной number
{
  if (number[0]==number[4] & number[1]==number[3]) // условие равенства символа с индексами 0 и 4 И равенства символов с индексами 1 и 3
  {
    Console.WriteLine($"{number} - да"); // true пишем "да"
  }
  else 
    Console.WriteLine($"{number} - нет"); //false пишем "нет"
}

if (number.Length == 5) // программа начинается с проверки на пятизначность переменной number
{
    CheckNumber(number); // true запускаем метод CheckNumber
}
else //false пишем, чтобы введенный текст/число было из пяти символов
    Console.WriteLine($"Введено неверное число! Нужно пятизначное.");
    
//Надо бы сделать еще проверку на то, является введенные символы числом, а потом уже метод запускать, но пока не знаю как...



// Задача 21: Напишите программу, которая принимает на вход координаты двух точек и находит расстояние между ними в 3D пространстве.
// A (3,6,8); B (2,1,-7), -> 15.84
// A (7,-5, 0); B (1,-1,9) -> 11.53



int CoordinatesEntering(string axisName, string pointName) // метод ввода координат точки и её имени
{
    Console.Write($"Введите координату по оси {axisName} точки {pointName} и нажмите enter: "); // запрос положение по оси координат и имени точки
    return Convert.ToInt32(Console.ReadLine()); 
}

double Formula(double x1, double x2,  // метод формулы расчета расстояния. Аргументы: три координаты точки 1 и три координаты точки 2 
                double y1, double y2, 
                double z1, double z2)
{
    return Math.Sqrt(Math.Pow((x2-x1), 2) + // квадратный корень из суммы квадратов разницы координат (x2-x1), (y2-y1), (z2-z1)
        Math.Pow((y2-y1), 2) + 
        Math.Pow((z2-z1), 2));
}

int x1 = CoordinatesEntering("x", "A"); // результат метода CoordinatesEntering записываем в переменную x1 
int y1 = CoordinatesEntering("y", "A");
int z1 = CoordinatesEntering("z", "A");
int x2 = CoordinatesEntering("x", "B");
int y2 = CoordinatesEntering("y", "B");
int z2 = CoordinatesEntering("z", "B");

double distanceBetweenPoints =  Math.Round (Formula(x1, x2, y1, y2, z1, z2), 2 ); // результат метода Formula записываем в переменную distanceBetweenPoints
// с округлением до двух знаков после запятой 
Console.WriteLine();                                                                
Console.WriteLine($"Расстояние между точками А и В = {distanceBetweenPoints}"); 
